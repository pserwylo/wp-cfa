{
  "autoload": {
    "psr-4": {
      "WP_CFA\\": "src/"
    }
  },
  "require-dev": {
    "wp-cli/i18n-command": "^2",
    "10up/wp_mock": "^1.1.0",
    "phpunit/phpunit": "^9.6",
    "wordpress/wordpress": "^6.9",
    "friendsofphp/php-cs-fixer": "^3.92",
    "aysnc/wordpress-php-cs-fixer": "^0.3.0"
  },
  "scripts": {
    "test": "phpunit",
    "lint": "./vendor/bin/php-cs-fixer fix --dry-run",
    "lint:fix": "./vendor/bin/php-cs-fixer fix",
    "update-weather-stations": "php ./scripts/update-weather-stations.php",
    "makepot": "wp i18n make-pot .",
    "zip": "rm -r vendor && composer install --no-dev && zip -r wp-cfa-1.0.0.zip public/* wp-cfa.php readme.txt src/* vendor/* LICENSE"
  },
  "repositories": [
    {
      "type": "package",
      "package": {
        "name": "wordpress/wordpress",
        "version": "6.9",
        "type": "wordpress-core",
        "dist": {
          "type": "zip",
          "url": "https://wordpress.org/wordpress-6.9.zip"
        }
      }
    }
  ],
  "require": {
    "ext-dom": "*",
    "ext-simplexml": "*",
    "ext-ftp": "*"
  }
}
